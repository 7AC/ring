{
  "name": "@dgreif/ring-alarm",
  "version": "2.2.0",
  "description": "API for ring security alarm system and smart lighting",
  "main": "api/index.js",
  "scripts": {
    "test": "tslint **/*.ts",
    "lint": "tslint **/*.ts --fix",
    "build": "rm -rf lib && tsc --declaration",
    "pre-release": "npm run build && npm test",
    "release-api": "./build/publish-api.sh",
    "package-homebridge": "./build/package-homebridge.sh",
    "release-homebridge": "npm run package-homebridge && ./build/publish-homebridge.sh",
    "release": "./build/publish-api.sh && npm run release-homebridge",
    "patch": "npm run pre-release && npm version patch && npm run release",
    "minor": "npm run pre-release && npm version minor && npm run release",
    "major": "npm run pre-release && npm version major && npm run release",
    "test-homebridge": "npm run build && npm run package-homebridge && homebridge -P ./release-homebridge"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/dgreif/ring-alarm.git"
  },
  "keywords": [
    "ring",
    "alarm",
    "smart",
    "light",
    "beam",
    "api"
  ],
  "author": "dgreif",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "colors": "^1.3.3",
    "debug": "^4.1.1",
    "rxjs": "^6.5.2",
    "socket.io": "^2.2.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.4",
    "@types/node": "^11.9.5",
    "@types/socket.io-client": "^1.4.32",
    "dotenv": "^8.0.0",
    "homebridge": "^0.4.49",
    "prettier": "^1.17.1",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.5"
  },
  "engines": {
    "node": ">=8.3.0"
  }
}
